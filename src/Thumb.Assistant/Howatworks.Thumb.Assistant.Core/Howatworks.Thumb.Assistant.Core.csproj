<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
    <IsTestProject>false</IsTestProject>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="appsettings.json" />
    <None Remove="appsettings.vs.json" />
    <None Remove="SocketTest.html" />
    <None Remove="StaticContent\css\theme-ed.css" />
    <None Remove="StaticContent\favicon.ico" />
    <None Remove="StaticContent\fonts\EUROCAPS.TTF" />
    <None Remove="StaticContent\fonts\Sintony-Regular.ttf" />
    <None Remove="StaticContent\js\assistant.js" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="appsettings.vs.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="StaticContent\css\theme-ed.css" />
    <EmbeddedResource Include="StaticContent\favicon.ico" />
    <EmbeddedResource Include="StaticContent\fonts\EUROCAPS.TTF" />
    <EmbeddedResource Include="StaticContent\fonts\Sintony-Regular.ttf" />
    <EmbeddedResource Include="StaticContent\index.html" />
    <EmbeddedResource Include="StaticContent\js\assistant.js" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="5.1.2" />
    <PackageReference Include="InputSimulatorStandard" Version="1.0.0" />
    <PackageReference Include="log4net" Version="2.0.8" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.5" />
    <PackageReference Include="Microsoft.AspNetCore.Server.Kestrel" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.WebSockets" Version="2.2.1" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="3.1.3" />
    <PackageReference Include="PInvoke.User32" Version="0.6.6" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\SubEtha.Bindings\Howatworks.SubEtha.Bindings\Howatworks.SubEtha.Bindings.csproj" />
    <ProjectReference Include="..\..\SubEtha.Journal\Howatworks.SubEtha.Journal\Howatworks.SubEtha.Journal.csproj" />
    <ProjectReference Include="..\..\Thumb\Howatworks.Thumb.Core\Howatworks.Thumb.Core.csproj" />
  </ItemGroup>

</Project>
