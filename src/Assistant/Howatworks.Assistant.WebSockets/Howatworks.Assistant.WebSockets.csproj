<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
    <OutputType>Library</OutputType>
    <NoDefaultLaunchSettingsFile>true</NoDefaultLaunchSettingsFile>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="StaticContent\css\custom.css" />
    <None Remove="StaticContent\css\landscape.css" />
    <None Remove="StaticContent\css\portrait.css" />
    <None Remove="StaticContent\css\theme-ed.css" />
    <None Remove="StaticContent\favicon.ico" />
    <None Remove="StaticContent\fonts\EUROCAPS.TTF" />
    <None Remove="StaticContent\fonts\Sintony-Regular.ttf" />
    <None Remove="StaticContent\index.html" />
    <None Remove="StaticContent\js\assistant.js" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="StaticContent\css\custom.css" />
    <EmbeddedResource Include="StaticContent\css\landscape.css" />
    <EmbeddedResource Include="StaticContent\css\portrait.css" />
    <EmbeddedResource Include="StaticContent\css\theme-ed.css" />
    <EmbeddedResource Include="StaticContent\favicon.ico" />
    <EmbeddedResource Include="StaticContent\fonts\EUROCAPS.TTF" />
    <EmbeddedResource Include="StaticContent\fonts\Sintony-Regular.ttf" />
    <EmbeddedResource Include="StaticContent\index.html" />
    <EmbeddedResource Include="StaticContent\js\assistant.js" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="6.1.0" />
    <PackageReference Include="log4net" Version="2.0.12" />
    <PackageReference Include="System.Reactive" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="5.0.5" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Thumb\Howatworks.Thumb.WebSockets\Howatworks.Thumb.WebSockets.csproj" />
  </ItemGroup>

</Project>
